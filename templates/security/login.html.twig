{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal lg">Se connecter</h1>
    <label for="inputMail" class="lg">Mail</label>
    <input type="text" value="{{ last_username }}" name="mail" id="inputMail" class="form-control lg input-lg" autocomplete="username" required autofocus>
    <label for="inputPassword"class="lg">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control lg input-lg"" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
        value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-primary" type="submit">
        Connexion
    </button>
</form>
{% endblock %}
